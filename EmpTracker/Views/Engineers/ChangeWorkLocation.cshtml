@model EngineerWorkLocationVM

@{
    ViewData["Title"] = "ChangeWorkLocation";
}

<h1>ChangeWorkLocation</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddWorkLocation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EngineerId" value="@Model.EngineerId" />
            <div class="form-group">              
                @Html.DropDownListFor(p=>p.WorkLocationId,new SelectList(Model.WorkLocations.Select(w=>w.WorkLocationId), "select one"))
            </div>
            <div class="form-group">
                <input type="submit" value="AddWorkLocation" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
